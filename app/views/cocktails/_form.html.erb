
<%= simple_form_for(@cocktail) do |f| %>


  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Cancel", cocktails_path, {:class=>"btn btn-warning"} %>
  </div>
<% end %>


