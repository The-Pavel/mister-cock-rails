<div class="container">
  <div class="row">
    <div class="col col-xs-12 col-md-4 col-md-offset-4" style="margin-bottom: 10px; margin-top: 10px; height: 200px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 200, width: 500, crop: :fill %>')">
    </div>
  </div>
  <div class="row" style="height: 100vh;">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <div class="col col-xs-12 col-md-4 col-md-offset-4" style="background: #F78AE0 !important; padding: 20px;">
      <p style="color: white; margin-bottom: 0;"><strong>Name:</strong></p>
      <p class="cockname"><%= @cocktail.name %></p>
    </div>
    <div class="col col-xs-12 col-md-4 col-md-offset-4" style="background: #F78AE0 !important; padding: 20px;">
      <%= link_to 'Edit', edit_cocktail_path(@cocktail), {:style=>'color: #A4DC7E;'} %> |
      <%= link_to 'Back', cocktails_path, {:style=>'color: #A4DC7E;'} %> |
      <%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } , class: 'red' %>
    </div>

    <div class="col col-xs-12 col-md-4 col-md-offset-4" style="color: white; background: #F78AE0 !important; padding: 20px;">
      <br>
      <p style="color: white;">Ingredients:</p>
      <%= link_to 'Add New Ingredient', new_cocktail_dose_path(@cocktail.id)  %>
      <% @cocktail.doses.each do |dose| %>
        <p style="margin-top: 10px;"><%= dose.description %><%= '  of  ' %><%= dose.ingredient.name %>   <%= link_to 'Remove', dose, method: :delete, class: 'btn-xs btn-danger' %></p>
      <% end %>
    </div>
  </div>
</div>


